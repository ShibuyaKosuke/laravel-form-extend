{
    "name": "shibuyakosuke/laravel-form-extend",
    "description": "Laravel 7+ form wrappers for Bootstrap and bulma.",
    "keywords": [
        "laravel",
        "form",
        "bootstrap",
        "bootstrap 3",
        "bootstrap 4",
        "bulma"
    ],
    "type": "library",
    "autoload": {
        "psr-4": {
            "ShibuyaKosuke\\LaravelFormExtend\\": "src/",
            "ShibuyaKosuke\\LaravelFormExtend\\Test\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ShibuyaKosuke\\LaravelFormExtend\\Providers\\ServiceProvider"
            ],
            "aliases": {
                "LaraForm": "ShibuyaKosuke\\LaravelFormExtend\\Facades\\FormBuilder",
                "LaraHtml": "ShibuyaKosuke\\LaravelFormExtend\\Facades\\HtmlBuilder"
            }
        }
    },
    "require": {
        "php": "^7.2.5 | ^7.3 | ^7.4 | ^8.0",
        "laravelcollective/html": "~5.0 | ~6.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ShibuyaKosuke",
            "email": "shibuya@imagenious.co.jp"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.0 | ^9.0",
        "mockery/mockery": "^1.3 | ^1.4",
        "orchestra/testbench": "^5.0 | ^6.0"
    }
}
